@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
@model ChangePasswordViewModel

<div class="container mt-4">
    <h1>Ändra lösenord</h1>
    <hr />
    <form asp-action="ChangePassword" method="post">
        <div class="form-group">
            <label for="CurrentPassword">Nuvarande lösenord</label>
            <input type="password" class="form-control" id="CurrentPassword" asp-for="CurrentPassword" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="NewPassword">Nytt lösenord</label>
            <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ConfirmPassword">Bekräfta nytt lösenord</label>
            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn" style="background-color: rgb(255, 167, 38); border-color: rgb(255, 167, 38); color: white;">Ändra lösenord</button>
        <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">Avbryt</a>
    </form>
</div>