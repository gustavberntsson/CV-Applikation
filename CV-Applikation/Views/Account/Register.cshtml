@model RegisterViewModel
@{
    ViewBag.Titel = "Registrera en ny användare";
}
<h1>Registrera</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="Register">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Användarnamn: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="AnvandarNamn" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Förnamn: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="FörNamn" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Efternamn: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="EfterNamn" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Epost: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" placeholder="example@example.com" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Telefon: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="TelefonNummer" class="form-control" placeholder="070-000 00 00" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Adress: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Adress" class="form-control" placeholder="Storgatan 5, Örebro" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Losenord" class="form-control" placeholder="********" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Bekräfta lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="BekraftaLosenord" class="form-control" placeholder="********" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Profilbild (URL): </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="ImageUrl" class="form-control" placeholder="https://imgur.com/din-bild" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
            <small class="form-text text-muted">Ange en länk till din profilbild</small>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <!-- Registrera-knappen med orange inline-stil -->
            <button type="submit" class="btn" style="background-color: rgb(255, 167, 38); border-color: rgb(255, 167, 38); color: white;">
                Registrera
            </button>
        </div>
    </div>
</form>
