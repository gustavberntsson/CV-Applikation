@{
    ViewData["Title"] = "ProfileSettings Page";
}
@model ProfileSettingsViewModel;

<h2>Profilinställningar</h2>

<form method="post">
    <div class="form-group">
        <label for="UserName">Användarnamn</label>
        <input type="text" class="form-control" id="UserName" value="@Model.UserName" disabled />
    </div>

    <div class="form-group">
        <label for="IsPrivate">Vill du ändra din profilinställning till?</label>
        <select asp-for="IsPrivate" class="form-control">
            @if (Model.IsPrivate)
            {
                <option value="false">Offentlig</option>
            }
            else
            {
                <option value="true">Privat</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Spara ändringar</button>
</form>
<br />
<p><a asp-controller="Home" asp-action="Index">Tillbaka</a></p>
